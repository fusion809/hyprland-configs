// -*- mode: jsonc -*-
// Font awesome is required for waybar's usual fonts
{
    // "layer": "top", // Waybar at top layer
    // "position": "bottom", // Waybar position (top|bottom|left|right)
    //"height": 30, // Waybar height (to be removed for auto height)
    // "width": 1280, // Waybar width
    "spacing": 4, // Gaps between modules (4px)
    // Choose the order of the modules
    "modules-left": [
	"custom/nixosicon",
	//"custom/updates",
	"hyprland/workspaces",
        //"hyprland/mode",
	"custom/weather",
	"custom/keyboard-layout",
	"pulseaudio",
	"custom/temperature",
	"custom/wallpaper-no",
	"custom/wallpaper-rm",
	"custom/wallpaper-previous",
	"custom/wallpaper-random",
	"custom/wallpaper-next",
	"custom/wallpaper-no-specify"
    ],
    "modules-center": [
        "hyprland/window"
    ],
    "modules-right": [
	"disk",
	"network",
        "cpu",
        "memory",
        "clock"
    ],

   "custom/weather": {
    "format": "{}¬∞",
    "tooltip": true,
    "interval": 60,
    "exec": "wttrbar",
    "return-type": "json"
   },
   "custom/temperature": {
	   "format": "{}",
	   "exec": "$HOME/GitHub/mine/config/hyprland-configs/temperature",
	   "on-click": "alacritty -e s-tui",
	   "interval": 1
   },
   "network": {
	   "interface": "enp24s0",
	   "format": "Ó™° {bandwidthUpBits} Ó™ö {bandwidthDownBits}",
	   "on-click": "alacritty -e gtop",
	   "interval": 1
   },
   // Modules configuration
     "hyprland/workspaces": {
	 "on-scroll-up": "hyprctl dispatch workspace e+1",
         "on-scroll-down": "hyprctl dispatch workspace e-1",
         "all-outputs": true,
         "on-click": "activate",
         "format": "{name}:{icon}",
         "format-icons": {
             "1": "Ôâ® ",
             "2": "Û∞πë ",
	     "3": "Û∞ÇØ ",
	     "4": "Óúè ",
	     "5": "ÔÇö/Ôáø ",
	     "6": "ÔÖ™ ",
	     "7": "Û∞ùÜ",
	     "8": "Óö≠/Û∞ïº ",
	     "9": "ÔÑõ ",
	     "10": "ÔÑõ ",
	     "11": "Óµµ ",
	     "12": "Óµµ ",
             "urgent": "ÔÅ™ ",
             "focused": "ÔÜí ",
             "default": "ÔÑë "
         }
    },
    "custom/nixosicon": {
	"format": "Ó°É",
		"tooltip": false,
		"menu": "on-click",
		"menu-file": "$HOME/GitHub/mine/config/hyprland-configs/nixos_menu.xml", // Menu file in resources folder
		"menu-actions": {
            "nerdfonts": "xdg-open https://www.nerdfonts.com/cheat-sheet",
			"wiki": "xdg-open https://wiki.nixos.org",
            "update": "$HOME/GitHub/mine/config/hyprland-configs/update",
			"rebuild": "$HOME/GitHub/mine/config/hyprland-configs/rebuild",
            "repair": "$HOME/GitHub/mine/config/hyprland-configs/repair",
            "nixpkgs": "xdg-open https://search.nixos.org/packages",
			"options": "xdg-open https://search.nixos.org/options",
			"nixosconfigs": "antigravity $HOME/GitHub/mine/config/NixOS-configs",
			"hyprlandconfigs": "antigravity $HOME/GitHub/mine/config/hyprland-configs",
            "shutdown": "sudo poweroff",
			"reboot": "sudo reboot",
			"logout": "hyprctl dispatch exit",
			"suspend": "sudo systemctl suspend",
			"hibernate": "sudo systemctl hibernate"
		}
    },
    "custom/updates": {
	    "format": "{}",
	    "exec": "$HOME/GitHub/mine/config/hyprland-configs/updates",
	    "on-click": "$HOME/Github/mine/config/hyprland-configs/update"
    },
    "custom/wallpaper-no": {
      "exec": "$HOME/GitHub/mine/config/hyprland-configs/no-wallpapers",
      "format": "Û∞∏â {}",                      // Nerd Font ‚Äúwallpaper‚Äù icon
      "tooltip": true,
      "tooltip-format": "Wallpaper: number selected/total number",
      "interval": 1,                         // Don‚Äôt poll or update automatically
      "on-click": "alacritty -e $HOME/GitHub/mine/config/hyprland-configs/list-wallpapers"

    },
    "custom/wallpaper-rm": {
	    "format": "Û∞Ü¥",
	    "on-click": "$HOME/GitHub/mine/config/hyprland-configs/wallpaper-rm",
	    "tooltip": true,
	    "tooltip-format": "Remove currently displayed wallpaper and move onto next wallpaper (Win+Shift+d)."
    },
    "custom/wallpaper-previous": {
	    "format": "ÔÅ†",
	    "tooltip": true,
	    "tooltip-format": "Previous wallpaper. Win+z achieves the same thing.",
	    "on-click": "$HOME/GitHub/mine/config/hyprland-configs/wallpaper systematic previous"
    },
    "custom/wallpaper-random": {
	    "format": "ÔÅ¥",
	    "tooltip": true,
	    "tooltip-format": "Random wallpaper. Win+Shift+s achieves the same thing.",
	    "on-click": "$HOME/GitHub/mine/config/hyprland-configs/wallpaper random"
    },
    "custom/wallpaper-next": {
	    "format": "ÔÅ°",
	    "tooltip": true,
	    "tooltip-format": "Next wallpaper. Win+w achieves the same thing.",
	    "on-click": "$HOME/GitHub/mine/config/hyprland-configs/wallpaper systematic next"
    },
    "custom/wallpaper-no-specify": {
	    "format": "Ôì∑",
	    "tooltip": true,
	    "tooltip-format": "Enter the number of the next wallpaper you want to see.",
	    "on-click": "$HOME/GitHub/mine/config/hyprland-configs/wallpaper-no-specify"
    },
    "custom/bluetooth-connect": {
      "format": "Ôäì",
      "on-click": "bluetooth-connect",
      "tooltip": true,
      "tooltip-format": "Connect to Bluetooth device"
    },
    "keyboard-state": {
        "numlock": true,
        "capslock": true,
        "format": "{name} {icon}",
        "format-icons": {
            "locked": "ÔÄ£",
            "unlocked": "ÔÇú"
        }
    },
    "disk": {
    	"format": "/ {used}/{total}",
    	"path": "/", // Or the path to the desired mount point, e.g., "/home"
    	"interval": 1,
	"on-click": "alacritty -e gtop"
    },
    "clock": {
        "timezone": "Australia/Brisbane",
        "tooltip-format": "<big>{:%r %a %d/%m/%y}</big>\n<tt><small>{calendar}</small></tt>",
        "format": "{:%r %a %d/%m/%y}",
	"interval": 1
    },
    "cpu": {
        "format": "{usage}% Ôãõ",
        "tooltip": false,
	"on-click": "alacritty -e gtop"
    },
    "memory": {
        "format": "{}% ÔÉâ",
	"on-click": "alacritty -e gtop"
    },
    "power-profiles-daemon": {
      "format": "{icon}",
      "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
      "tooltip": true,
      "format-icons": {
        "default": "ÔÉß",
        "performance": "ÔÉß",
        "balanced": "Ôâé",
        "power-saver": "ÔÅ¨"
      }
    },
    "pulseaudio": {
        // "scroll-step": 1, // %, can be a float
        "format": "{volume}% {icon}",
        "format-bluetooth": "{volume}% {icon}Ôäî",
        "format-bluetooth-muted": "Ôö© {icon}Ôäî",
        "format-muted": "Ôö© ",
	"format-source": "",
        //"format-source": "{volume}% ÔÑ∞",
        "format-source-muted": "ÔÑ±",
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "Ôñê",
            "headset": "Ôñê",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
        },
        "on-click": "pavucontrol"
    },
