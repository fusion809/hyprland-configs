        "format": "{icon} {text}",
        "return-type": "json",
        "max-length": 40,
        "format-icons": {
            "spotify": "ÔÜº",
            "default": "üéú"
        },
        "escape": true,
        "exec": "$HOME/.config/waybar/mediaplayer.py 2> /dev/null" // Script in resources folder
        // "exec": "$HOME/.config/waybar/mediaplayer.py --player spotify 2> /dev/null" // Filter player based on name
    },*/
    "custom/keyboard-layout": {
	    "format": "ÔÑú {}",
	    "exec": "$HOME/GitHub/mine/config/hyprland-configs/keyboard-layout",
	    "on-click": "hyprctl switchxkblayout current next",
	    "tooltip": true,
	    "interval": 1,
	    "tooltip-format": "Keyboard layout; click or press Win+Space to change it."
    }
}
